extends ../layouts/default
include ../helpers/mixins
include ../../blocks/components/breadcrumbs/breadcrumbs.pug
include ../../blocks/components/form/form.pug
include ../../blocks/components/checkbox/checkbox.pug
include ../../blocks/components/headers/headers.pug

block variables
	- const title = "Style Guide";

block content
	section#breadcrumbs
		.container
			+h2('Хлебные крошки')
			+breadcrumb([
				{
					link: "/",
					text: "Главная",
				},
				{
					link: "/",
					text: "Элементы",
					isActive: true,
				},
			])
	section#buttons
		.container
			+h2('Кнопки')
			.buttons
				+h3('Кнопки')
				button.btn Кнопка
				button.btn.btn-disabled Кнопка
			br
			.buttons
				+h3('Кнопки с закругленными углами')
				button.btn.btn-round Кнопка с закругленными углами
				button.btn.btn-disabled.btn-round Кнопка с закругленными углами
			br
			.buttons
				+h3('Кнопка cсылка')
				a(href="/#editcontent").btn.btn-link.btn-round.smooth__scroll Кнопка ссылка
			br
			.buttons
				+h3('Кнопка отправки')
				button.btn.btn-round(type="submit") Кнопка отправки
				button.btn.btn-loading.btn-round(type="submit") Кнопка отправки
				button.btn.btn-success.btn-round(type="submit") Кнопка отправки
				button.btn.btn-round.btn-disabled(type="submit") Кнопка отправки
		br
	section#textfields
		.container
			+h2('Текстовые поля')
			+h3('Без иконок')
			+input({
				type: 'text',
				placeholder: 'Введите ваше имя',
				label: false,
				required: true,
			})
			br
			+input({
				type: 'tel',
				placeholder: 'Введите ваш телефон',
				label: false,
				required: true,
			})
			br
			+textarea({
				placeholder: 'Введите сообщение',
				label: false,
				required: true,
			})
			+h3('С иконкой')
			+input-icon({
				type: 'text',
				placeholder: 'Введите ваше имя',
				label: false,
				required: true,
				icon: "#ic_person",
			})
			br
			+textarea-icon({
				placeholder: 'Введите сообщение',
				label: false,
				required: true,
				icon: "#ic_person",
			})
	section#selects
		.container
			+h2('Select')
			+h3('Без иконок')
			+selectCustom({
				placeholder: "Выберите",
				label: false,
				data: ['Минск', 'Могилев'],
				required: false,
			})
			+h3('С иконкой')
			+selectCustomIcon({
				placeholder: 'Выберите',
				label: false,
				data: ['Минск', 'Могилев'],
				icon: "#ic_person",
				required: false,
			})
	section#forms
		.container
			+h2('Формы')
			form(action="/")
				.form__field
					+selectCustom({
						name: "town",
						placeholder: "Выберите город",
						label: false,
						data: ['Минск', 'Могилев', 'Брест', 'Гродно', 'Гомель', 'Витебск'],
						required: true,
					})
				.form__field
					+input({
						name: "user",
						type: 'text',
						placeholder: 'Введите ваше имя',
						label: false,
						required: true,
					})
				.form__field
					+input({
						name: "phone",
						type: 'tel',
						placeholder: 'Введите ваш телефон',
						label: false,
						required: true,
					})
				.form__field
					+textarea({
						name: "message",
						placeholder: 'Введите сообщение',
						label: false,
						required: true,
					})
				button.btn(type="submit") Отправить
	section#radio
		.container
			+h2('Радиокнопки')
			+h3('Радиокнопки')
			+radio({
				label: 'Unchecked',
				name: 'name',
				disabled: false,
				check: false
			})
			+radio({
				label: 'Checked',
				name: 'name',
				disabled: false,
				check: true,
			})
			+radio({
				label: 'Disabled',
				name: 'name',
				disabled: true,
				check: false,
			})
			+h3('Чекбоксы')
			+checkbox({
				label: 'Unchecked',
				disabled: false,
				check: false,
			})
			+checkbox({
				label: 'Unchecked and disabled',
				disabled: true,
				check: false,
			})
			+checkbox({
				label: 'Checked',
				disabled: false,
				check: true,
			})
			+checkbox({
				label: 'Checked and disabled',
				disabled: true,
				check: true,
			})
	section#editcontent
		.container
			.edit-content
