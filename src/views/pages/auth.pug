extends ../layouts/default
include ../helpers/mixins
include ../../blocks/components/breadcrumbs/breadcrumbs.pug
include ../../blocks/components/form/form.pug
include ../../blocks/components/checkbox/checkbox.pug
include ../../blocks/components/headers/headers.pug

block variables
  - const title = "Авторизация";

block styles
  link(rel="stylesheet" href="/styles/auth.css")

block content
  section.auth
    .container
      .section-h2 Авторизация
      form(action="")
        .form__field
          +input({
            type: "tel",
            label: "Введите телефон:",
            placeholder: "+375 ( _ _ _ ) - _ _ _ - _ _ - _ _",
            required: true,
            name: "phone",
          })
        .form__field
          +input({
            type: "password",
            label: "Пароль:",
            placeholder: "",
            required: true,
            name: "password",
          })
        .form__btns
          button.btn.btn-round.btn-big(type="submit") Войти
        .form__options
          +checkbox({
            label: 'Запомнить меня',
            disabled: false,
            check: true,
            name: "remember",
            required: true,
          })
          a.link(href='#') Забыли пароль?
block scripts
  script(src="/js/main.js")