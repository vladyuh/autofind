extends ../layouts/pickup
include ../helpers/mixins
include ../../blocks/components/breadcrumbs/breadcrumbs.pug
include ../../blocks/components/form/form.pug
include ../../blocks/components/checkbox/checkbox.pug
include ../../blocks/components/headers/headers.pug

block variables
  - const title = "История";

block styles
  link(rel="stylesheet" href="/styles/request.css")

block content
  section.request.pickup-request
    .container
      .section-h2 История
      form.request__search
        .form__field
          +input-icon({
          type: 'search',
          placeholder: 'Поиск',
          label: false,
          required: false,
          icon: "#ic_search",
        })
      form.request__sort
        .form__field
          +selectCustom({
            class: "center",
            placeholder: "Сортировка: по дате",
            label: "",
            data: ['Сортировка: по дате','Сортировка: по маркам'],
            required: true,
            name: "sort",
          })
      .request__items
        .request__item
          .request__itemImage
            .image: img(src="/img/common/request.jpg")
          .request__itemList
            .title.section-h3 Ford GaLaxy 2, 2010
            a(href="#").edit: +icons('#ic_edit', 19)
            .list-item
              .name Клиент:
              .value Иван Петров
            .list-item
              .name Город:
              .value Гомель
            .list-item
              .name Подборщик:
              .value Сергей Семенов
            .list-item
              .name Номер заявки:
              .value 32455
            .list-item
              .name Дата добавления :
              .value 01.12.2022
            .list-item
              .name Цена:
              .value: strong 9800$
        .request__item
            .request__itemImage
              .image: img(src="/img/common/request.jpg")
