extends ../layouts/default
include ../helpers/mixins
include ../../blocks/components/breadcrumbs/breadcrumbs.pug
include ../../blocks/components/form/form.pug
include ../../blocks/components/checkbox/checkbox.pug
include ../../blocks/components/headers/headers.pug

block variables
  - const title = "Редактирование ";

block styles
  link(rel="stylesheet" href="/styles/pickup.css")

block content
  section.clients
    .container
      .section-h2 Редактирование 
      form.clients__add.clients__edit
        .form__field
          +input({
            placeholder: "",
            required: true,
            type: "text",
            label: "ФИО",
          })
        .form__field
          +selectCustom({
            placeholder: "Минск",
            label: "Город",
            data: ['Минск','Могилев'],
            required: true,
            name: "city",
          })
        .form__field
          +input({
            placeholder: "+375 ( _ _ _ ) - _ _ _ - _ _ - _ _",
            required: true,
            type: "tel",
            label: "Телефон:",
          })
        .form__btns.clients__btns
          a(href="#").remove-btn
            +icons('#ic_close', 28)
            span Удалить
          button(type="submit").btn.btn-round.btn-big Сохранить
block scripts
  script(src="/js/main.js")